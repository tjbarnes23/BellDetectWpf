        <Label Canvas.Left="10" Canvas.Top="120" Width="380" Height="25"
                HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                FontFamily="Arial" FontSize="13">
            Wave 1 frequency (0 - 20000 Hz):
        </Label>

        <TextBox Canvas.Left="410" Canvas.Top="120" Width="80" Height="25"
                VerticalContentAlignment="Center"
                FontFamily="Arial" FontSize="13"
                Padding="6, 0, 0, 0"
                Text="{Binding Path=(vm:WaveformVM.Wave1Freq), Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}">
        </TextBox>

        <Label Canvas.Left="510" Canvas.Top="120" Width="280" Height="25"
                HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                FontFamily="Arial" FontSize="13">
            Wave 1 amplitude (0 - 32767):
        </Label>

        <TextBox Canvas.Left="810" Canvas.Top="120" Width="80" Height="25"
                VerticalContentAlignment="Center"
                FontFamily="Arial" FontSize="13"
                Padding="6, 0, 0, 0"
