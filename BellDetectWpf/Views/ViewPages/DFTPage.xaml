<Page x:Class="BellDetectWpf.Views.ViewPages.DFTPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BellDetectWpf.Views.ViewPages"
      xmlns:vm="clr-namespace:BellDetectWpf.ViewModels"
      mc:Ignorable="d"
      d:DesignWidth="1000"
      d:DesignHeight="800">

    <Canvas Width="1000" Height="800">
        <TextBlock Canvas.Left="360" Canvas.Top="25" Width="280" Height="50"
                TextAlignment="Center"
                FontFamily="Arial Black" FontSize="20" FontWeight="Bold">
            Bell Detect
        </TextBlock>

        <TextBlock Canvas.Left="360" Canvas.Top="125" Width="280" Height="50"
                TextAlignment="Center"
                FontFamily="Arial Black" FontSize="20" FontWeight="Bold">
            DFT
        </TextBlock>

        <TextBlock Canvas.Left="160" Canvas.Top="210" Width="680" Height="75"
                FontFamily="Arial" FontSize="13" TextWrapping="Wrap" LineHeight="20">
            This page will run a DFT with 0.5 Hz frequency resolution using a sample frequency of
            10kHz, to give frequency readings up to 5kHz. 20,000 samples are therefore required (10kHz / 0.5Hz),
            i.e. a 2 second sample duration. The samples used will begin at the time provided in the box below.
        </TextBlock>

        <Label Canvas.Left="110" Canvas.Top="325" Width="380" Height="30"
                HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                FontFamily="Arial Black" FontSize="14">
            Start time (s):
        </Label>

        <TextBox Canvas.Left="510" Canvas.Top="325" Width="180" Height="30"
                VerticalContentAlignment="Center"
                FontFamily="Arial Black" FontSize="14"
                Padding="6, 0, 0, 0"
                Text="{Binding Path=(vm:DFTVM.StartTime), Mode=TwoWay, 
                        UpdateSourceTrigger=LostFocus}">
        </TextBox>

        <!-- File name -->

        <Label Canvas.Left="10" Canvas.Top="425" Width="180" Height="30"
                HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                FontFamily="Arial Black" FontSize="14">
            File name:
        </Label>

        <TextBox Canvas.Left="210" Canvas.Top="425" Width="530" Height="30"
                VerticalContentAlignment="Center"
                FontFamily="Arial Black" FontSize="14"
                Padding="6, 0, 0, 0"
                Text="{Binding Path=(vm:DFTVM.FilePathName), Mode=TwoWay, 
                        UpdateSourceTrigger=PropertyChanged}">
        </TextBox>

        <Button Canvas.Left="760" Canvas.Top="415" Width="180" Height="50"
                FontFamily="Arial Black" FontSize="14" FontWeight="Bold"
                Click="Browse_Click">
            Browse
        </Button>

        <Button Canvas.Left="410" Canvas.Top="525" Width="180" Height="50"
                FontFamily="Arial Black" FontSize="14" FontWeight="Bold"
                Click="DFT_Click">
            Run DFT
        </Button>

        <Button Canvas.Left="410" Canvas.Top="625" Width="180" Height="50"
                FontFamily="Arial Black" FontSize="14" FontWeight="Bold"
                Click="Return_Click">
            Return to main page
        </Button>
    </Canvas>
</Page>
