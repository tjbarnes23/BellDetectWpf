<Window x:Class="BellDetectWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BellDetectWpf"
        mc:Ignorable="d"
        Title="Bell Detect"
        Width="350"
        Height="350"
        Closed="Window_Closed">
    <Canvas Width="300" Height="300">
        <TextBlock Canvas.Left="10" Canvas.Top="25" Width="280" Height="50"
                TextAlignment="Center"
                FontFamily="Arial Black" FontSize="20" FontWeight="Bold">
            Bell Detect
        </TextBlock>

        <Button Canvas.Left="60" Canvas.Top="100" Width="180" Height="50"
                FontFamily="Arial Black" FontSize="14" FontWeight="Bold"
                Click="StartStopBtn_Click"
                Content="{Binding Path=(local:ViewModel.StartStopTxt)}">
        </Button>

        <Button Canvas.Left="60" Canvas.Top="175" Width="180" Height="50"
                FontFamily="Arial Black" FontSize="14" FontWeight="Bold"
                Click="GenerateWav_Click">
            Generate .wav file
        </Button>
    </Canvas>
</Window>
